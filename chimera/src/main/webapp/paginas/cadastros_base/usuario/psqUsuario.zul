<?init class="br.com.ueg.pids.Login.AuthenticationInit"?>
<zk>  

  	<hbox align="center" sclass="searchform">
        <textbox value="@bind(vm.busca)"  sclass="searchfield"/>
        <button label="Pesquisar" image="" onClick="@command('ListarTodos')" />
    </hbox>

    <listbox sclass="mylist" id="list" model="@bind(vm.lstUsuario)" emptyMessage="Nenhum usuario listado." width="600px"
     style="margin-top:10px"  selectedItem="@bind(vm.itemSelected)"  mold="paging" pageSize="8">
        	

        	<listhead sizable="true">
            	<listheader label="Nome" align="center" sort="auto(nome)" />
            	<listheader label="Cargo" align="center" sort="auto(cargo)" />
            	<listheader label="Departamento" align="center" sort="auto(departamento)" />
            	<listheader label="Permissao" align="center" sort="auto(permissao)" />
            	<listheader label="Status" align="center" sort="auto(ativo)" />
        	</listhead>
        <template name="model">
      
        
            <listitem>
                <listcell  label="@bind(each.nome)" sclass="highlightcell"></listcell>
                <listcell  label="@bind(each.cargo.nome)"></listcell>
                <listcell  label="@bind(each.cargo.departamento.nome)"></listcell>
                <listcell  label="@bind(each.permissao)"></listcell>
                <listcell  label="@bind(each.ativo)"></listcell>
            </listitem>
            
        </template>
   	 </listbox>

   		 	<auxhead>
        		<auxheader colspan="4" class="topic">
        			<button label="Alterar" onClick="@command('telaAlterar')" />
        			<button label="Deletar" onClick="@command('deletar')" />
        			<label
        				value="Para alterar ou desativar selecione um item"
        				style="color: blue; font-size:8pt" />
        		</auxheader>
        	</auxhead>
    </zk>
    