<?init class="br.com.ueg.pids.Login.AuthenticationInit"?>
<zk>
		<fgrid hflex="min" sclass="nostyle">
			<rows>

				<row>
					<label value="Usuário:" />
					<textbox id="fldUser" width="100%" />

					<label value="Departamento:" />
					<textbox id="fldDepartament" width="100%" />


				</row>
				<row>
					<label value="Cargo:" />
					<textbox id="fldCargo" width="100%" />

					<label value="Permissão:" />
					<textbox id="fldPermission" width="100%" />
				</row>
				
				<row>
					<label value="Recurso:" />
					<combobox id="fldRecurso" width="100%" />

					<label value="Status:" />
					<textbox id="fldStatus" width="60%" />
				</row>
			</rows>
		</fgrid>
		<listbox sclass="mylist" id="list"  model="@bind(vm.lstSolicitacoes)"
			emptyMessage="Nenhuma solicitação selecionada." width="750px"
			style="margin-top:10px" mold="paging" pageSize="4">

 
			<listhead sizable="false">
				<listheader label="Data" align="center"
					sort="auto(data)" />
				<listheader label="Usuário" align="center"
					sort="auto(usuario)" />
				<listheader label="Descrição" align="center"
					sort="auto(descricao)" />
					<listheader label="" align="center" />
			</listhead>
			<template name="model">
				<listitem>
					<listcell label="@bind(each.data)" sclass="highlightcell"></listcell>
					<listcell label="@bind(each.usuario.account)"></listcell>
					<listcell label="@bind(each.descricao)"></listcell>
					<listcell>

						<button image="/imagens/remove-icon.png"
							onClick="@command('desativar') @global-command('refresh')" />
						<button image="/imagens/edit-icon.png"
							onClick="@command('telaAlterar') @global-command('refresh')" />
					</listcell>

				</listitem>
			</template>
		</listbox>
		<auxhead>
			<auxheader class="topic">
				<fbutton label="Salvar" onClick="@command('salvar')" />
				<fbutton label="Rejeitar" onClick="@command('rejeitar')" />
				<fbutton label="Aprovar" onClick="@command('aprovar')" />
				<fbutton label="Limpar" onClick="@command('limpar')" />
			</auxheader>
		</auxhead>
</zk>