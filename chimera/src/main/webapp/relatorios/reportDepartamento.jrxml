	<queryString>
		<![CDATA[select
	d.nome as departamento,
	s.titulo as solicitacao,
	s.situacao as situacao,
	r.nome as recurso,
	r.idrecurso

	from 	solicitacoes as s,
		usuario as u,
		recurso as r,
		departamento as d
	where 	s.idusuario = u.idusuario
